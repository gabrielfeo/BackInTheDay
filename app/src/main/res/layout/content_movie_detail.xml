<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android = "http://schemas.android.com/apk/res/android"
	xmlns:app = "http://schemas.android.com/apk/res-auto"
	xmlns:tools = "http://schemas.android.com/tools"
	android:layout_width = "match_parent"
	android:layout_height = "match_parent"
	android:padding = "@dimen/global_activity_padding"
	app:layout_behavior = "android.support.design.widget.AppBarLayout$ScrollingViewBehavior"
	tools:showIn = "@layout/activity_movie_detail">

	<ImageView
		android:id = "@+id/moviedetail_iv_poster"
		android:layout_width = "wrap_content"
		android:layout_height = "wrap_content"
		android:layout_marginEnd = "16dp"
		app:layout_constraintEnd_toStartOf = "@id/moviedetail_tv_title"
		app:layout_constraintStart_toStartOf = "parent"
		app:layout_constraintTop_toTopOf = "parent"
		tools:layout_height = "225dp"
		tools:layout_width = "150dp"
		tools:src = "@tools:sample/avatars" />

	<TextView
		android:id = "@+id/moviedetail_tv_title"
		android:layout_width = "0dp"
		android:layout_height = "wrap_content"
		android:textAppearance = "@style/TextAppearance.MaterialComponents.Headline5"
		android:textColor = "@android:color/black"
		android:textStyle = "bold"
		app:layout_constraintBottom_toBottomOf = "@id/moviedetail_iv_poster"
		app:layout_constraintEnd_toEndOf = "parent"
		app:layout_constraintStart_toEndOf = "@id/moviedetail_iv_poster"
		app:layout_constraintTop_toTopOf = "@id/moviedetail_iv_poster"
		app:layout_constraintVertical_bias = "0.25"
		tools:text = "The Godfather" />

	<TextView
		android:id = "@+id/moviedetail_tv_director"
		android:layout_width = "wrap_content"
		android:layout_height = "wrap_content"
		app:layout_constraintStart_toStartOf = "@id/moviedetail_tv_title"
		app:layout_constraintTop_toBottomOf = "@id/moviedetail_tv_title"
		tools:text = "Francis Ford Coppola " />

	<TextView
		android:id = "@+id/moviedetail_tv_year"
		android:layout_width = "wrap_content"
		android:layout_height = "wrap_content"
		app:layout_constraintBottom_toBottomOf = "@id/moviedetail_tv_director"
		app:layout_constraintStart_toEndOf = "@id/moviedetail_tv_director"
		app:layout_constraintTop_toTopOf = "@id/moviedetail_tv_director"
		tools:text = "(1972)" />

</android.support.constraint.ConstraintLayout>